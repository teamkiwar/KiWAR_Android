<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".study.StudyScanActivity">

    <fragment
        android:id="@+id/sceneform_scan_fragment"
        android:name="com.yg.mykiwar.study.StudyScanFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_scan_check"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/capture"/>

        <ImageView
            android:id="@+id/btn_scan_record"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/microphone_black_shape"/>
    </LinearLayout>



</RelativeLayout>
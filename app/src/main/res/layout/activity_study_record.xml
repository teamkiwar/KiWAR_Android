<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".study.StudyRecordActivity">
    <fragment
        android:id="@+id/sceneform_record_fragment"
        android:name="com.yg.mykiwar.study.StudyScanFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/image_record_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tory_re"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_record_pronoun"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/microphone_black_shape"/>

    </LinearLayout>

</RelativeLayout>